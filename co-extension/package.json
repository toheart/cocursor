{
  "name": "cocursor",
  "displayName": "CoCursor",
  "description": "帮助团队成员共享 AI 聊天记录，提升 Cursor 团队协作效率",
  "version": "0.1.0",
  "publisher": "cocursor",
  "private": true,
  "icon": "resources/icon.png",
  "keywords": [
    "cursor",
    "collaboration",
    "ai",
    "chat",
    "team"
  ],
  "engines": {
    "vscode": "^1.80.0"
  },
  "files": [
    "dist",
    "bin",
    "resources"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cocursor.openDashboard",
        "title": "打开仪表板"
      },
      {
        "command": "cocursor.refreshTasks",
        "title": "刷新任务列表"
      },
      {
        "command": "cocursor.addTask",
        "title": "添加任务"
      },
      {
        "command": "cocursor.showPeers",
        "title": "显示节点列表"
      },
      {
        "command": "cocursor.showStats",
        "title": "显示使用统计"
      },
      {
        "command": "cocursor.showCurrentTeam",
        "title": "显示当前团队"
      },
      {
        "command": "cocursor.joinTeam",
        "title": "加入团队"
      },
      {
        "command": "cocursor.refreshSidebar",
        "title": "刷新侧边栏",
        "icon": "$(refresh)"
      },
      {
        "command": "cocursor.openWorkAnalysis",
        "title": "打开工作分析"
      },
      {
        "command": "cocursor.openSessions",
        "title": "打开会话列表"
      },
      {
        "command": "cocursor.openMarketplace",
        "title": "打开技能市场"
      }
    ],
    "views": {
      "cocursor": [
        {
          "id": "cocursor.sidebar",
          "name": "CoCursor",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cocursor",
          "title": "CoCursor",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "configuration": {
      "title": "CoCursor",
      "properties": {
        "cocursor.autoStartServer": {
          "type": "boolean",
          "default": true,
          "description": "自动启动后端服务器"
        },
        "cocursor.daemon.port": {
          "type": "number",
          "default": 19960,
          "description": "后端服务器端口"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node build.js --production",
    "compile": "tsc -p ./",
    "watch": "node build.js --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./dist/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-window": "^1.8.8",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "esbuild": "^0.27.2",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "highlight.js": "^11.9.0",
    "i18next": "^25.7.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^16.5.3",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.20.0",
    "react-window": "^1.8.10",
    "recharts": "^2.10.3",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1"
  }
}
