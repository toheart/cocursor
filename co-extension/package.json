{
  "name": "cocursor",
  "displayName": "CoCursor",
  "description": "Team AI collaboration tool - semantic search of AI conversations, skill marketplace, automated work reports, and P2P team sharing",
  "version": "0.1.0",
  "publisher": "cocursor",
  "private": true,
  "license": "SEE LICENSE IN LICENSE",
  "homepage": "https://github.com/toheart/cocursor",
  "bugs": {
    "url": "https://github.com/toheart/cocursor/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/toheart/cocursor"
  },
  "icon": "resources/icon.png",
  "keywords": [
    "cursor",
    "ai",
    "collaboration",
    "team",
    "rag",
    "semantic-search",
    "work-report",
    "skill-sharing",
    "productivity",
    "daily-report"
  ],
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Data Science",
    "Machine Learning",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cocursor.openDashboard",
        "title": "打开仪表板"
      },
      {
        "command": "cocursor.refreshTasks",
        "title": "刷新任务列表"
      },
      {
        "command": "cocursor.addTask",
        "title": "添加任务"
      },
      {
        "command": "cocursor.showPeers",
        "title": "显示节点列表"
      },
      {
        "command": "cocursor.showStats",
        "title": "显示使用统计"
      },
      {
        "command": "cocursor.showCurrentTeam",
        "title": "显示当前团队"
      },
      {
        "command": "cocursor.joinTeam",
        "title": "加入团队"
      },
      {
        "command": "cocursor.refreshSidebar",
        "title": "刷新侧边栏",
        "icon": "$(refresh)"
      },
      {
        "command": "cocursor.openWorkAnalysis",
        "title": "打开工作分析"
      },
      {
        "command": "cocursor.openSessions",
        "title": "打开会话列表"
      },
      {
        "command": "cocursor.openMarketplace",
        "title": "打开技能市场"
      },
      {
        "command": "cocursor.openCodeAnalysis",
        "title": "打开 Go 影响面分析"
      },
      {
        "command": "cocursor.toggleStatusSharing",
        "title": "CoCursor: 切换工作状态分享"
      },
      {
        "command": "cocursor.refreshWebview",
        "title": "CoCursor: 刷新 Webview 数据"
      },
      {
        "command": "cocursor.todoQuickPick",
        "title": "CoCursor: 待办事项"
      },
      {
        "command": "cocursor.todoAdd",
        "title": "CoCursor: 添加待办"
      },
      {
        "command": "cocursor.shareSession",
        "title": "分享到团队",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "cocursor.refreshSessions",
        "title": "刷新会话列表",
        "icon": "$(refresh)"
      }
    ],
    "keybindings": [
      {
        "command": "cocursor.todoQuickPick",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "cocursor.shareSession",
          "when": "view == cocursor.sessions && viewItem == session",
          "group": "inline"
        }
      ]
    },
    "views": {
      "cocursor": [
        {
          "id": "cocursor.sidebar",
          "name": "CoCursor",
          "when": "true"
        },
        {
          "id": "cocursor.sessions",
          "name": "会话",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cocursor",
          "title": "CoCursor",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "configuration": {
      "title": "CoCursor",
      "properties": {
        "cocursor.autoStartServer": {
          "type": "boolean",
          "default": true,
          "description": "自动启动后端服务器"
        },
        "cocursor.daemon.port": {
          "type": "number",
          "default": 19960,
          "description": "后端服务器端口"
        },
        "cocursor.reminder.enabled": {
          "type": "boolean",
          "default": false,
          "description": "启用每日总结提醒"
        },
        "cocursor.reminder.eveningTime": {
          "type": "string",
          "default": "17:50",
          "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$",
          "description": "下班前提醒时间（HH:mm 格式）"
        },
        "cocursor.reminder.morningTime": {
          "type": "string",
          "default": "09:00",
          "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$",
          "description": "次日补充提醒时间（HH:mm 格式）"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node build.js --production",
    "compile": "tsc -p ./",
    "watch": "node build.js --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./dist/test/runTest.js"
  },
  "devDependencies": {
    "@types/html2canvas": "^0.5.35",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-window": "^1.8.8",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "esbuild": "^0.27.2",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "date-fns": "^4.1.0",
    "highlight.js": "^11.9.0",
    "html2canvas": "^1.4.1",
    "i18next": "^25.7.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^16.5.3",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.20.0",
    "react-window": "^1.8.10",
    "recharts": "^2.10.3",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "zustand": "^5.0.11"
  }
}
